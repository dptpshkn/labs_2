/*1.Задание: Найти расстояние между двумя точками с заданными координатами (x1, y1) и (x2, y2)*/
#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    int x1,x2,y1,y2,c;
    cin >> x1 >> x2 >> y1 >> y2;
    c=sqrt(pow((x2-x1),2)+pow((y2-y1),2));
    cout << c;
    return 0;
}

/*2.Задание: Даны три точки A, B, C на числовой оси. Найти длины отрезков AC
и BC и их сумму.
*/
#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int x1,x2,x3,ac,bc;
    cin >> x1 >> x2 >> x3;
    ac = x3-x1;
    bc = x3-x2;
    cout << ac << endl;
    cout << bc << endl;
    cout << ac + bc << endl;
    return 0;
}
